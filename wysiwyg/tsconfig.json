{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "composite": false,
    "declarationDir": "./dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["vitest/globals"],
  },
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/index.js"]
}